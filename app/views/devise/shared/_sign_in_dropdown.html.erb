<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:id=>"new_session", :class=>"form-horizontal"}) do |f| %>
    <%= f.email_field :email, :style=>"margin-bottom: 15px;", :placeholder=>"Email" %>
    <%= f.password_field :password, :style=>"margin-bottom: 15px;", :placeholder=>"Password" %>
    <% if devise_mapping.rememberable? %>
        <label for="user_remember_me" class="checkbox" style="margin-bottom: 15px;">
          <%= f.check_box :remember_me %>
          Remember me
        </label>
    <% end %>
    <%= f.submit "Sign in", :class => "btn btn-primary" %>
    <%= link_to "Google Sign in", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-primary" %>
<% end %>