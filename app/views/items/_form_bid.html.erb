<%= form_tag bid_path(@item.id), :html => { :class => "form-horizontal" } do %>
    <div class="control-group">
        <label class="control-label" for="item_name">Bid: </label>
        <div class="controls">
            <%= number_field_tag :bid_amount, @item.highest_bid + 1 ,:min => 0.01, :step =>0.01%>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <%= submit_tag "Submit", :class=>"btn btn-primary" %>
        </div>
    </div>
<% end %>